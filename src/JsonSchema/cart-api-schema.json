{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Cart API Schema",
    "required": [
        "cartProducts"
    ],
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "string",
            "title": "The id schema"
        },
        "creationDate": {
            "$id": "#/properties/creationDate",
            "type": "string"
        },
        "lastModified": {
            "$id": "#/properties/lastModified",
            "type": "string"
        },
        "cartProducts": {
            "$id": "#/properties/cartProducts",
            "type": "array",
            "additionalItems": false,
            "items": {
                "$id": "#/properties/cartProducts/items",
                "anyOf": [
                    {
                        "$id": "#/properties/cartProducts/items/anyOf/0",
                        "type": "object",
                        "required": [
                            "quantity",
                            "productName",
                            "productPrice",
                            "productStock",
                            "productId",
                            "cartProductPrice"
                        ],
                        "properties": {
                            "id": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/id",
                                "type": "string"
                            },
                            "quantity": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/quantity",
                                "type": "integer"
                            },
                            "productName": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/productName",
                                "type": "string"
                            },
                            "productPrice": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/productPrice",
                                "type": "integer"
                            },
                            "productStock": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/productStock",
                                "type": "integer"
                            },
                            "productId": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/productId",
                                "type": "string"
                            },
                            "cartProductPrice": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/cartProductPrice",
                                "type": "integer"
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        }
    },
    "additionalProperties": false
}
