{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Cart API Schema",
    "required": [
        "cartProducts"
    ],
    "properties": {
        "cartProducts": {
            "$id": "#/properties/cartProducts",
            "type": "array",
            "additionalItems": false,
            "items": {
                "$id": "#/properties/cartProducts/items",
                "anyOf": [
                    {
                        "$id": "#/properties/cartProducts/items/anyOf/0",
                        "type": "object",
                        "required": [
                            "quantity",
                            "productId"
                        ],
                        "properties": {
                            "quantity": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/quantity",
                                "type": "integer"
                            },
                            "productId": {
                                "$id": "#/properties/cartProducts/items/anyOf/0/properties/productId",
                                "type": "string"
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        }
    },
    "additionalProperties": false
}
